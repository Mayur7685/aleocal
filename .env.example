# Aleo Network Configuration for AleoCal
# Copy this file to .env and customize as needed

# ========================================
# Aleo SDK Configuration
# ========================================

# Use mock SDK for development (set to 'true' to use mock, 'false' for real SDK)
# The real SDK requires WASM support and @provablehq/sdk package
REACT_APP_USE_MOCK_SDK=true

# ========================================
# Network Configuration
# ========================================

# Aleo API endpoint (Provable Explorer API)
# Testnet: https://api.explorer.provable.com/v1
REACT_APP_ALEO_API_URL=https://api.explorer.provable.com/v1

# Network name (testnet or mainnet)
REACT_APP_ALEO_NETWORK=testnet

# ========================================
# Program Configuration
# ========================================

# Program ID (must be deployed on the network for on-chain operations)
REACT_APP_ALEO_PROGRAM_ID=aleocal.aleo

# ========================================
# Fee Configuration (in microcredits)
# 1 Aleo credit = 1,000,000 microcredits
# ========================================

# Base fee for transitions (0.5 credits)
REACT_APP_ALEO_BASE_FEE=500000

# Priority fee multiplier (1.0 = no priority)
REACT_APP_ALEO_PRIORITY_MULTIPLIER=1.0

# Deployment fee (5 credits - for deploying programs)
REACT_APP_ALEO_DEPLOYMENT_FEE=5000000

# ========================================
# Timeout Configuration (in milliseconds)
# ========================================

# Execution timeout for local proving
REACT_APP_ALEO_EXECUTION_TIMEOUT=120000

# Transaction confirmation timeout
REACT_APP_ALEO_CONFIRMATION_TIMEOUT=300000

# WASM initialization timeout
REACT_APP_ALEO_WASM_TIMEOUT=30000

# ========================================
# Performance Configuration
# ========================================

# Thread pool size for parallel proving (0 = auto-detect)
REACT_APP_THREAD_POOL_SIZE=0
